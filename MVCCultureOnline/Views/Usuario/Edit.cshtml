@model CultureOnline.Application.DTOs.UsuarioDTO

@{
    ViewData["Title"] = "Editar Usuario";
}

<h3 class="text-center mt-4 mb-4">Actualizar Usuario</h3>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="card-resena">
        <div class="card-details">

            <div class="mb-3">
                <label asp-for="Nombre" class="form-label"><strong>Nombre completo</strong></label>
                <input asp-for="Nombre" class="form-control" readonly />
            </div>

            <div class="mb-3">
                <label asp-for="Correo" class="form-label"><strong>Correo electrónico</strong></label>
                <input asp-for="Correo" class="form-control" readonly />
            </div>

            <div class="mb-3">
                <label asp-for="IDRol" class="form-label"><strong>Rol</strong></label>
                <select asp-for="IDRol" asp-items="ViewBag.Roles" class="form-select" disabled></select>
                <input type="hidden" asp-for="IDRol" />

            </div>

            <div class="mb-3">
                <label asp-for="Estado" class="form-label"><strong>Estado</strong></label>
                <select asp-for="Estado" class="form-select" id="Estado">
                    <option value="Activo">Activo</option>
                    <option value="Inactivo">Inactivo</option>
                </select>

            </div>

            <div class="mb-3">
                <label class="form-label"><strong>Último inicio de sesión</strong></label>
                <input class="form-control" value="@Model.UltimoInicioSesion?.ToString("dd/MM/yyyy HH:mm")" readonly />
            </div>
        </div>

        <div class="card-buttons d-flex justify-content-between mt-4">
            <a asp-action="Index" class="btn1 btn-secondary text-decoration-none text-center">
                Cancelar
            </a>
            <button type="submit" class="btn1 btn-primary" id="btnGuardar" disabled>
                Guardar cambios
            </button>

        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <partial name="_ValidationScriptsPartial" />
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const estadoOriginal = document.getElementById("Estado").value;
            const estadoSelect = document.getElementById("Estado");
            const btnGuardar = document.getElementById("btnGuardar");

            estadoSelect.addEventListener("change", function () {
                btnGuardar.disabled = (estadoSelect.value === estadoOriginal);
            });
        });
    </script>
}
